<?xml version="1.0" ?>
<launch>

  <arg name="robot" default="$(find avatar_env_description)/robots/avatar_env.urdf.xacro"/>
  <arg name="robot_id" default="panda_single"/>
  <arg name="rviz" default="false"/>
  <arg name="rqt" default="false"/>
  <arg name="robot_ips" default="{panda_right/robot_ip: 172.16.3.3}"/>

  <arg name="hw_config_file" default="$(find avatar_dual_controllers)/config/franka_combined_control_node_single.yaml"/>
  <arg name="controllers_file" default="$(find avatar_dual_controllers)/config/default_combined_controllers_single.yaml"/>

  <arg name="controllers_to_start" default="panda_right_state_controller"/>
  <arg name="joint_states_source_list" default="[panda_right_state_controller/joint_states]"/>

  <include file="$(find franka_control)/launch/franka_combined_control.launch">
    <arg name="robot" value="$(arg robot)"/>
    <arg name="robot_id" value="$(arg robot_id)"/>
    <arg name="robot_ips" value="$(arg robot_ips)"/>
    <arg name="hw_config_file" value="$(arg hw_config_file)"/>
    <arg name="controllers_file" value="$(arg controllers_file)"/>
    <arg name="controllers_to_start" value="$(arg controllers_to_start)"/>
    <arg name="joint_states_source_list" value="$(arg joint_states_source_list)"/>
  </include>

  <group ns="$(arg robot_id)">
    <rosparam command="load" file="$(find avatar_dual_controllers)/config/avatar_dual_controllers.yaml"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="avatar_single_controller"/>

  </group>

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find avatar_env_description)/robots/avatar_env.urdf.xacro'" />
  <include file="$(find avatar_moveit_config)/launch/planning_context.launch"/>
  
</launch>
